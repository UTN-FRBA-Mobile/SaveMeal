<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.savemeal.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signUpShopFragment"
            app:destination="@id/signUpShopFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpConsumerFragment"
            app:destination="@id/signUpConsumerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/availableMealsFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpShopFragment"
        android:name="com.example.savemeal.SignUpShopFragment"
        android:label="fragment_sign_up_shop"
        tools:layout="@layout/fragment_sign_up_shop" />
    <fragment
        android:id="@+id/signUpConsumerFragment"
        android:name="com.example.savemeal.SignUpConsumerFragment"
        android:label="fragment_sign_up_consumer"
        tools:layout="@layout/fragment_sign_up_consumer" />
    <fragment
        android:id="@+id/availableMealsFragment"
        android:name="com.example.savemeal.AvailableMealsFragment"
        android:label="fragment_available_meals"
        tools:layout="@layout/fragment_available_meals" />
    <fragment
        android:id="@+id/reservationsFragment"
        android:name="com.example.savemeal.ReservationsFragment"
        android:label="fragment_reservations"
        tools:layout="@layout/fragment_reservations" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.savemeal.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>